// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id                Int      @id @default(autoincrement())
  name              String   @unique
  PrimaryCurrency   Currency @relation(fields: [primaryCurrencyId], references: [id])
  primaryCurrencyId Int
}

model Currency {
  id    Int    @id @default(autoincrement())
  code  String @unique
  Books Book[]
}

model Account {
  number       Int         @id @unique
  name         String
  type         AccountType @relation(fields: [accountType], references: [name])
  accountType  String
  parentNumber Int         @unique
  parent       Account?    @relation("ParentAccount", fields: [parentNumber], references: [number])
  children     Account?    @relation("ParentAccount")
}

model AccountType {
  name        String    @id @unique
  description String
  isExternal  Boolean   @default(false)
  Accounts    Account[]
}
